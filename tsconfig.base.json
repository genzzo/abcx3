{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "dist",
        "types": [],
        "rootDir": ".",
        "composite": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "ES2022",
        "module": "CommonJS",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "lib": [
            "ES2022"
        ],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@prisma-tools/nestjs-prisma": [
                "libs/nestjs-prisma/src"
            ],
            "@prisma-tools/nestjs-request-parser": [
                "libs/request-parser/src"
            ],
            "@prisma-tools/prisma-generator-nestjs": [
                "libs/prisma-generator-nestjs/src"
            ],
            "@prisma-tools/prisma-generator-dart": [
                "libs/prisma-generator-dart/src"
            ],
            "@prisma-tools/shared": [
                "libs/shared/src"
            ]
        },
        "resolveJsonModule": true
    },
    
    "exclude": [
        "node_modules",
        "tmp",
        "dist",
        "__dist_old"
    ]
}